<?xml version="1.0"?>
<robot name="bci_arm">

  <link name="base_link">
    <visual>
      <geometry>
        <box size="10 12 0.5"/>
      </geometry>
    </visual>
  </link>

  <!-- Thumb FingerLink Definition -->
  <link name="thumb1">
    <visual>
      <geometry>
	<box size="2 4 0.5"/>
      </geometry>
    </visual>
  </link>

  <link name="thumb2">
    <visual>
      <geometry>
	<cylinder length="2" radius="1"/>
      </geometry>
    </visual>
  </link>

  <link name="thumb3">
    <visual>
      <geometry>
	<cylinder length="1" radius="1"/>
      </geometry>
    </visual>
  </link>

  <!-- Index Finger Link Definition -->
  <link name="index1">
    <visual>
      <geometry>
	<cylinder length="2" radius="0.5"/>
      </geometry>
    </visual>
  </link>

  <link name="index2">
    <visual>
      <geometry>
	<cylinder length="1" radius="0.5"/>
      </geometry>
    </visual>
  </link>

  <link name="index3">
    <visual>
      <geometry>
	<cylinder length="1" radius="0.5"/>
      </geometry>
    </visual>
  </link>

  <!-- Middle Finger Link Definition -->
  <link name="middle1">
    <visual>
      <geometry>
	<cylinder length="2" radius="0.5"/>
      </geometry>
    </visual>
  </link>

  <link name="middle2">
    <visual>
      <geometry>
	<cylinder length="1" radius="0.5"/>
      </geometry>
    </visual>
  </link>

  <link name="middle3">
    <visual>
      <geometry>
	<cylinder length="1" radius="0.5"/>
      </geometry>
    </visual>
  </link>

  <!-- Ring Finger Link Definition -->
  <link name="ring1">
    <visual>
      <geometry>
	<cylinder length="2" radius="0.5"/>
      </geometry>
    </visual>
  </link>

  <link name="ring2">
    <visual>
      <geometry>
	<cylinder length="1" radius="0.5"/>
      </geometry>
    </visual>
  </link>

  <link name="ring3">
    <visual>
      <geometry>
	<cylinder length="1" radius="0.5"/>
      </geometry>
    </visual>
  </link>

  <!-- Pinky Finger Link Definition -->
  <link name="pinky1">
    <visual>
      <geometry>
	<cylinder length="2" radius="0.5"/>
      </geometry>
    </visual>
  </link>


  <link name="pinky2">
    <visual>
      <geometry>
	<cylinder length="1" radius="0.5"/>
