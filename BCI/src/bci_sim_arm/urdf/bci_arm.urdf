  </link>


  <link name="pinky3">
    <visual>
      <geometry>
	<cylinder length="1" radius="0.5"/>
      </geometry>
    </visual>
  </link>



  <!-- Joints Definitions -->

    <!-- Finger Bases to base_link Definition -->
      <joint name="base_thumb_joint" type="revolute">
	<parent link="base_link"/>
	<child link="thumb1"/>
	<origin xyz="8  0 0" rpy="0 0 0" />
	<axis xyz="6 0 0" rpy="0 0 0" />
	<limit effort="100" lower="0.0" upper="0.785" velocity="0.5" />
      </joint>

      <joint name="base_index_joint" type="revolute">
	<parent link="base_link"/>
	<child link="index1"/>
	<origin xyz="3.75 8 0" rpy="0 0 0" />
	<axis xyz="3.75 6.5 0" rpy="0 0 0" />
	<limit effort="100" lower="0.0" upper="0.785" velocity="0.5" />
      </joint>

      <joint name="base_middle_joint" type="revolute">
	<parent link="base_link"/>
	<child link="middle1"/>
	<origin xyz="1.25 8 0" rpy="0 0 0" />
	<axis xyz="1.25 6.5 0" rpy="0 0 0" />
	<limit effort="100" lower="0.0" upper="0.785" velocity="0.5" />
      </joint>


      <joint name="base_ring_joint" type="revolute">
	<parent link="base_link"/>
	<child link="ring1"/>
	<origin xyz="-1.25 8 0" rpy="0 0 0" />
	<axis xyz="-1.25 6.5 0" rpy="0 0 0" />
	<limit effort="100" lower="0.0" upper="0.785" velocity="0.5" />
      </joint>


      <joint name="base_pinky_joint" type="revolute">
	<parent link="base_link"/>
	<child link="pinky1"/>
	<origin xyz="-3.75 8 0" rpy="0 0 0" />
	<axis xyz="-3.75 6 0" rpy="0 0 0" />
	<limit effort="100" lower="0.0" upper="0.785" velocity="0.5" />
      </joint>


    <!-- Thumb Joint Definition -->
      <joint name="first_thumb_joint" type="revolute">
	<parent link="thumb1"/>
	<child link="thumb2"/>
	<origin xyz="0 4 0" rpy="0 0 0" />
	<axis xyz="0 2.5 0" rpy="0 0 0" />
	<limit effort="100" lower="0.0" upper="0.785" velocity="0.5" />
      </joint>

      <joint name="second_thumb_joint" type="revolute">
	<parent link="thumb2"/>
	<child link="thumb3"/>
